<div class="form-group">
  <label for="name" class="form-label"> Talent Name </label>
  <input
    required
    type="text"
    name="name"
    id="name"
    class="form-control"
    value="<%= talent.name %>"
  />
</div>

<div class="row">
  <div class="form-group col">
    <label for="month" class="form-label"> Debut month </label>
    <input
      required
      type="number"
      min="1"
      max="12"
      name="month"
      id="month"
      class="form-control"
      value="<%= talent.month %>"
    />
  </div>
  <div class="form-group col">
    <label for="day" class="form-label"> Debut day </label>
    <input
      required
      type="number"
      min="1"
      max="31"
      name="day"
      id="day"
      class="form-control"
      value="<%= talent.day %>"
    />
  </div>
  <div class="form-group col">
    <label for="year" class="form-label"> Debut year </label>
    <input
      required
      type="number"
      min="2017"
      max="2037"
      name="year"
      id="year"
      class="form-control"
      value="<%= talent.year %>"
    />
  </div>
</div>
  



<div class="form-group">
  <label for="unitName" class="form-label">Talent's Unit</label>
  <select name="unitName" id="unitName" class="form-select">
    <% holoUnits.forEach(({ branch, units }) => { %>
      <optgroup label="<%= branch %>">
        <% units.forEach((unit) => { %>
          <option 
          value="<%= unit %>"
          <%= unit === talent.unitName ? "selected" : "" %>
          >
            <%= unit %> 
          </option>
      <%  }) %>
      </optgroup>
    <% }) %>
  </select>
</div>

<div class="form-group">
  <label for="youtube" class="form-label"> Talent Youtube Page </label>
  <input
    required
    type="url"
    id="youtube"
    name="youtube"
    class="form-control"
    value="<%= talent.youtube %>"
  />
</div>

<div class="form-group">
  <label for="twitter" class="form-label"> Talent Twitter Page </label>
  <input
    required
    type="url"
    name="twitter"
    id="twitter"
    class="form-control"
    value="<%= talent.twitter %>"
  />
</div>

<div class="form-group">
  <label for="bioBlurb" class="form-label"> Talent Bio </label>
  <textarea required name="bioBlurb" id="bioBlurb" class="form-control" rows="10"><%= talent.bioBlurb %></textarea>
</div>

<div class="form-group">
  <button type="submit" class="btn btn-primary">Save</button>
  <a href="/" class="btn btn-secondary"> Cancel </a>
</div>
